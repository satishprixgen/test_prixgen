<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<template id="flip_snippet" name="flip snippet">
  <section class="flip_snippet">
    <div class="container">
<div class="row">
   <div class="col-md-3 col-lg-3">
      <div class="flip">
        <div class="card"> 
          <div class="face front"> 
            <div class="inner">   
              <img src="https://simple.wikipedia.org/wiki/Nature#/media/File:Hopetoun_falls.jpg"/>
            </div>
          </div> 
          <div class="face back"> 
            <div class="inner text-center"> 
              <h3>Improved efficiency through automation</h3>
              <button type="button" class="btn btn-default">Know More</button>
            </div>
          </div>
        </div>   
      </div>
    </div>
  
  </div>
  </div>
  </section>
</template>

<template id="place_into_bar2" inherit_id="website.snippets" name="place flip snippet">
  <xpath expr="//div[@id='snippet_effect']/div[@class='o_panel_body']" position="inside">
    <t t-snippet="theme_prixgen.flip_snippet"
       t-thumbnail="/theme_prixgen/static/src/img/ui/img_avatar.png"/>
  </xpath>
</template>
</odoo>